<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle"></shape>
        <solid android:color="@color/light_blue"></solid>
        <corners android:radius="30dp"></corners>
        <padding android:left="15dp" android:right="15dp"></padding>
        <color android:color="@color/text_light"></color>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle"></shape>
        <solid android:color="@color/text_dark"></solid>
        <corners android:radius="30dp"></corners>
        <padding android:left="15dp" android:right="15dp"></padding>

    </item>

</selector>